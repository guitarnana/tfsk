<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WPF="clr-namespace:Microsoft.TeamFoundation.Controls.WPF;assembly=Microsoft.TeamFoundation.Controls" x:Class="tfsk.MainWindow"
        Title="tfsk" WindowStartupLocation="Manual" Width="1024" Height="800" >
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="4*" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="6*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<ListView Margin="5" Grid.Column="0" Grid.Row="0" Name="lvChangeset" SelectionMode="Single" 
				  SelectionChanged="lvChangeset_SelectionChanged" SelectedIndex="0" >
			<ListView.ItemContainerStyle>
				<Style TargetType="ListViewItem">
					<Setter Property="Height" Value="20" />
				</Style>
			</ListView.ItemContainerStyle>
			<ListView.View>
				<GridView>
					<GridViewColumn Header="ChangesetID" Width="100" DisplayMemberBinding="{Binding ChangesetId}" />
					<GridViewColumn Header="Message" Width="250" DisplayMemberBinding="{Binding Comment}" />
					<GridViewColumn Header="Commit Time" Width="150" DisplayMemberBinding="{Binding CreationDate}" />
					<GridViewColumn Header="Committer" Width="100" DisplayMemberBinding="{Binding OwnerDisplayName}" />
				</GridView>
			</ListView.View>
		</ListView>

		<TextBox x:Name="tbChangeComment" Grid.Row="0" Grid.Column="2" Margin="5" Text="changecomment" 
				 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" />

		<ListView Margin="5" Grid.Row="2" Grid.Column="0" Name="lvFiles" SelectionMode="Single" 
				  SelectedIndex="0" SelectionChanged="lvFiles_SelectionChanged" >
			<ListView.View>
				<GridView>
					<GridViewColumn Header="File" Width="300" DisplayMemberBinding="{Binding Item.ServerItem}" />
					<GridViewColumn Header="Op" Width="70" DisplayMemberBinding="{Binding ChangeType}" />
				</GridView>
			</ListView.View>
		</ListView>

		<TextBox x:Name="tbChangeDiff" Grid.Row="2" Grid.Column="2" Margin="5" Text="changediff" 
				 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" />

		<GridSplitter Grid.Column="1" Grid.RowSpan="3" Width="2" HorizontalAlignment="Center" />
		<GridSplitter Grid.ColumnSpan="3" Grid.Row="1" Height="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" ResizeDirection="Rows" />
		
	</Grid>
</Window>
